---
interface Book {
  title: string;
  description: string;
  coverUrl: string;
  linkUrl: string;
  linkLabel?: string;
}

const books: Book[] = [
  {
    title: 'The Walk on Layton: 52 Modern Parables for Your Journey',
    description: 'A nonfiction collection of 52 short stories about life, family, and experiences in the United States and China. Named after Layton Road where Jo Ann lives, each story ends with encouragement for your Walk—reflecting the book\'s theme of how we choose to live our lives. Designed to read one story per week over the course of a year. Released December 2024.',
    coverUrl: '/placeholder-book.svg',
    linkUrl: 'https://www.amazon.com/Walk-Layton-Modern-Parables-Journey/dp/B0DPTL67J2',
    linkLabel: 'Get it on Amazon',
  },
];
---
<section id="books" class="py-16 md:py-24 bg-white/50 scroll-mt-20 animate-fade-in opacity-0" style="animation-delay: 0.2s">
  <div class="max-w-content mx-auto px-6">
    <h2 class="font-display text-2xl md:text-3xl font-semibold text-navy mb-10">Books</h2>
    <ul class="grid gap-10 md:grid-cols-2 lg:gap-12">
      {books.map((book) => (
        <li class="flex flex-col sm:flex-row gap-6 p-6 rounded-lg hover:bg-cream/60 transition-colors">
          <a href={book.linkUrl} target="_blank" rel="noopener noreferrer" class="shrink-0 w-36 h-52 rounded-md overflow-hidden bg-charcoal/10 border border-charcoal/10 shadow-sm hover:shadow-md transition-shadow">
            <img src={book.coverUrl} alt={`Cover: ${book.title}`} class="w-full h-full object-cover" width="144" height="208" />
          </a>
          <div class="flex flex-col min-w-0">
            <h3 class="font-display text-xl font-semibold text-navy">{book.title}</h3>
            <p class="mt-2 text-charcoal/80 text-base leading-relaxed flex-1">{book.description}</p>
            <a href={book.linkUrl} target="_blank" rel="noopener noreferrer" class="mt-4 inline-flex items-center text-accent font-medium hover:text-accent-hover transition-colors">
              {book.linkLabel ?? 'Find it here'}
              <span class="ml-1" aria-hidden="true">→</span>
            </a>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
