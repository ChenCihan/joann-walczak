---
interface Book {
  title: string;
  description: string;
  coverUrl: string;
  linkUrl: string;
  linkLabel?: string;
}

const books: Book[] = [
  {
    title: 'The Walk on Layton: 52 Modern Parables for Your Journey',
    description: 'Fifty-two short stories about life, family, and experiences in the United States and China—named after Layton Road, where Jo Ann lives. Each story ends with a little encouragement for your own Walk, and the book is meant to be enjoyed one story per week over the course of a year. Released December 2024.',
    coverUrl: 'https://m.media-amazon.com/images/P/B0DPTL67J2._SY445_SX342_ML2_.jpg',
    linkUrl: 'https://www.amazon.com/Walk-Layton-Modern-Parables-Journey/dp/B0DPTL67J2',
    linkLabel: 'Get it on Amazon',
  },
];
---
<section id="books" class="py-16 md:py-24 scroll-mt-20 opacity-0 animate-fade-in-soft relative" style="animation-delay: 0.25s">
  <div class="max-w-content mx-auto px-6">
    <h2 class="font-display text-2xl md:text-3xl font-semibold text-paper mb-3">Books</h2>
    <div class="w-12 h-0.5 bg-gradient-to-r from-sage/70 to-accent/50 rounded-full mb-10" aria-hidden="true" />
    {books.map((book) => (
      <div class="flex flex-col sm:flex-row gap-8 sm:gap-10 p-6 sm:p-8 rounded-xl border border-white/5 hover:border-white/10 hover:bg-white/[0.02] transition-all duration-350">
        <a href={book.linkUrl} target="_blank" rel="noopener noreferrer" class="shrink-0 w-40 h-[13rem] sm:w-44 sm:h-64 rounded-lg overflow-hidden bg-white/5 border border-white/10 shadow-lg hover:shadow-xl hover:border-accent/30 transition-all duration-350 mx-auto sm:mx-0">
          <img src={book.coverUrl} alt={`Cover: ${book.title}`} class="w-full h-full object-cover transition-transform duration-350 hover:scale-[1.02]" width="176" height="256" onerror="this.onerror=null;this.src='/placeholder-book.svg'" />
        </a>
        <div class="flex flex-col min-w-0 flex-1 max-w-prose">
          <h3 class="font-display text-xl sm:text-2xl font-semibold text-paper">{book.title}</h3>
          <p class="mt-3 text-paper/70 text-base sm:text-lg leading-relaxed flex-1">{book.description}</p>
          <a href={book.linkUrl} target="_blank" rel="noopener noreferrer" class="mt-6 inline-flex items-center text-accent font-medium hover:text-accent-hover transition-colors duration-350">
            {book.linkLabel ?? 'Find it here'}
            <span class="ml-1" aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
