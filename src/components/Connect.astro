---
interface SocialLink {
  label: string;
  href: string;
  icon: 'x' | 'instagram' | 'goodreads' | 'newsletter';
}

const socialLinks: SocialLink[] = [
  { label: 'Twitter / X', href: 'https://twitter.com/yourhandle', icon: 'x' },
  { label: 'Instagram', href: 'https://instagram.com/yourhandle', icon: 'instagram' },
  { label: 'Goodreads', href: 'https://goodreads.com/yourprofile', icon: 'goodreads' },
  { label: 'Newsletter', href: 'https://example.com/newsletter', icon: 'newsletter' },
];

const iconPaths: Record<SocialLink['icon'], string> = {
