---
interface SocialLink {
  label: string;
  href: string;
  icon: 'blog' | 'goodreads' | 'facebook';
}

const socialLinks: SocialLink[] = [
  { label: 'Blog — On Layton', href: 'https://joannjoneswalczak.blogspot.com/', icon: 'blog' },
  { label: 'Facebook', href: 'https://www.facebook.com/joann.walczak', icon: 'facebook' },
  { label: 'The Walk on Layton (Amazon)', href: 'https://www.amazon.com/Walk-Layton-Modern-Parables-Journey/dp/B0DPTL67J2', icon: 'goodreads' },
];

const iconPaths: Record<SocialLink['icon'], string> = {
  blog: 'M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-4.86 8.86l-3 3.87L9 13.14 6 17h12l-3.86-5.14z',
  goodreads: 'M4 19.5A2.5 2.5 0 016.5 17H20V7H6.5A2.5 2.5 0 004 9.5v10zM6.5 5H20v2H6.5A2.5 2.5 0 004 9.5v1A2.5 2.5 0 006.5 5z',
  facebook: 'M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z',
};
---
<section id="connect" class="section-texture py-16 md:py-24 bg-surface scroll-mt-20 opacity-0 animate-fade-in-soft relative" style="animation-delay: 0.5s">
  <div class="absolute bottom-16 right-6 md:right-12 w-20 h-px bg-gradient-to-l from-sage/40 to-transparent" aria-hidden="true" />
  <div class="max-w-content mx-auto px-6">
    <h2 class="font-display text-2xl md:text-3xl font-semibold text-paper mb-3">Connect</h2>
    <div class="w-12 h-0.5 bg-gradient-to-r from-sage/70 to-accent/50 rounded-full mb-8" aria-hidden="true" />
    <p class="text-paper/80 text-lg max-w-prose mb-10">
      She'd love to hear from you—read the blog, say hello on Facebook, or find <em class="text-paper">The Walk on Layton</em> on Amazon.
    </p>
    <ul class="flex flex-wrap gap-4">
      {socialLinks.map((item) => (
        <li>
          <a href={item.href} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-4 py-3 rounded-lg border border-white/10 text-paper hover:border-accent/50 hover:text-accent transition-all duration-350 hover:scale-[1.02] active:scale-[0.98]">
            <svg class="w-5 h-5 shrink-0 text-current" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d={iconPaths[item.icon]} />
            </svg>
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>
