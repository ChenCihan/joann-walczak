---
const navLinks = [
  { label: 'About', href: '#about' },
  { label: 'Books', href: '#books' },
  { label: 'Blog', href: '#blog' },
  { label: 'Connect', href: '#connect' },
];
---
<header class="sticky top-0 z-50 bg-cream/95 backdrop-blur-sm border-b border-charcoal/10">
  <nav class="max-w-content mx-auto px-6 py-4 flex flex-col sm:flex-row items-center justify-between gap-4 sm:gap-8" aria-label="Main navigation">
    <a href="#" class="font-display text-xl font-semibold text-navy hover:text-accent transition-colors">Jo Ann Walczak</a>
    <ul class="flex items-center gap-6 sm:gap-8">
      {navLinks.map((link) => (
        <li>
          <a href={link.href} class="text-charcoal/80 hover:text-accent transition-colors text-sm font-medium">{link.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>
