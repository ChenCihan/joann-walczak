---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Jo Ann Walczak â€” Writer', description = 'Author of The Walk on Layton: 52 Modern Parables for Your Journey. Former teacher, writer, and blogger from Northeastern Pennsylvania.' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="font-body text-paper bg-ink antialiased min-h-screen flex flex-col relative">
    <div class="dusk-glows" aria-hidden="true" id="dusk-glows">
      <div class="dusk-glow dusk-glow--1" data-speed="0.12"></div>
      <div class="dusk-glow dusk-glow--2" data-speed="0.28"></div>
      <div class="dusk-glow dusk-glow--3" data-speed="0.45"></div>
      <div class="dusk-glow dusk-glow--4" data-speed="0.2"></div>
      <div class="dusk-glow dusk-glow--5" data-speed="0.35"></div>
    </div>
    <div class="relative z-10 flex flex-col min-h-screen">
      <slot />
    </div>
    <script>
      (function () {
        const glows = document.getElementById('dusk-glows');
        if (!glows) return;
        const orbs = glows.querySelectorAll('.dusk-glow');
        let ticking = false;
        function update() {
          const y = window.scrollY ?? window.pageYOffset;
          orbs.forEach((el) => {
            const speed = parseFloat((el as HTMLElement).dataset.speed ?? '0.2');
            (el as HTMLElement).style.transform = `translateY(${y * speed}px)`;
          });
          ticking = false;
        }
        function onScroll() {
          if (!ticking) {
            requestAnimationFrame(update);
            ticking = true;
          }
        }
        window.addEventListener('scroll', onScroll, { passive: true });
        update();
      })();
    </script>
  </body>
</html>
